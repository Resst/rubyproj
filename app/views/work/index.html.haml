
= javascript_include_tag "work/index"
.image
  .row
    .col-md-3
.left_controls
  %select{name: "selector", class: "form-control", onchange: "this.value.startsWith('/themes/') ? applyTheme(this.value) : window.location.href = this.value"}
    %option{value: ""} Select an option...
    - @themes.each do |theme|
      %option{value: "/themes/#{theme}"}= "Apply #{theme} Theme"
%br
.col-md-9
  .image_display
    .row.image
      .col-md-12
        %h2.up-theme{:title => "theme_name"}
          #{@selected_theme}

      .col-md-12
        %h2.up{:title => "Image file name"}
          #{@selected_image_name}

      .col-md-1
        .img-left-side
          %h3{:title => "list to previous image"}
            %i.fa.fa-chevron-circle-left.strong
      .col-md-10
        .img-center{:title => "Default image"}
    %img{:alt => "Default Image", :src =>
      asset_path('raduga.jpg'),
       :title => "Default image",
      :style => "width:100%; height:100%;" }
      .image_user_value{:title => "Expert value"}


      .col-md-1
        .img-right-side
          %h3{:title => "list to next image"}
            %i.fa.fa-chevron-circle-right
%h1 Work Index


%br
