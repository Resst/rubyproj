= form_for @user do |f|
  - if @user.errors.any?
    # error_explanation
      %h2= "#{pluralize(@user.errors.count, "error")} prohibited this user from being saved:"
      %ul
        - @user.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label t('users.index.name')
    = f.text_field :name
  .field
    = f.label t('users.index.email')
    = f.text_field :email

  .actions
   -#= f.submit 'Save'
    = f.submit t(".create_account"), class:
  "btn btn-large btn-primary"
