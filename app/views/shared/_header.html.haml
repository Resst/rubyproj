
%nav
  %ul.nav.navbar-nav.pull-right
    %li= link_to t('.home'), root_path
    %li= link_to t('.help'), help_path
    - if signed_in?
      %li= link_to "Users", '#'
      %li.logged
        #{current_user.email}
      = gravatar_for current_user
      %li
        #fat-menu.dropdown
        %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
          %p
            = t('.person')
            %b.caret
        %ul.dropdown-menu
          %li= link_to t('.profile'), current_user
          %li= link_to t('.settings'), '#'
          %li.divider
          %li
            = link_to t('.sign_out'), signout_path, method: "delete"
    - else
      %li= link_to t('.sign_in'), signin_path
      %p.locale

  = link_to image_tag(asset_path("Russia.png"), alt: "Русский",  style: "width: 10%; height: 10%", title: "Русский" ), locale: :ru
  = link_to image_tag("UK.png", alt: "English",  style: "width: 12%; height: 12%", title: "English"), locale: :en
  %b
    = I18n.locale

